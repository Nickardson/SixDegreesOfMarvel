<div id="app">
    <div class="jumbotron">
        <h1>Chain Finder</h1>
    </div>

    <div id="chainContainer">
        <div v-for="chain in chains" class="row">
            <div class="col-xs-2 col-sm-1 chain-item-subtitle">{{chain.type}}</div>
            <div class="col-xs-10 col-sm-11">
                <div class="row">
                    <div v-for="name in chain.names"
                         class="chain-item col-xs-4"
                         v-bind:class="{ 'chain-item-selected-item': name === chain.selectedName }">
                        {{name}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br/>

@section scripts {
    <style>
        .chain-item {
            text-align: center;
        }

        .chain-item-subtitle {
            color: gray;
            font-style: italic;
        }

        .chain-item-selected-item {
            font-weight: bold;
        }
    </style>
    <script src="~/Scripts/vue.js" type="text/javascript"></script>
    <script src="~/Scripts/marvel/chainfinder.js" type="text/javascript"></script>
}